<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ContactDetailsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/contact_details_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="visible"
            tools:visibility="gone" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/contact_details_reload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/try_again"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/contact_details_photo"
                android:layout_width="@dimen/size_128dp"
                android:layout_height="@dimen/size_128dp"
                android:layout_marginStart="@dimen/margin_16dp"
                android:layout_marginTop="@dimen/margin_16dp"
                android:backgroundTint="@color/mint"
                android:importantForAccessibility="no"
                android:visibility="gone"
                tools:src="@tools:sample/avatars"
                tools:visibility="visible" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/contact_details_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="@dimen/margin_16dp"
                android:layout_marginTop="@dimen/margin_16dp"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:visibility="gone"
                tools:text="@tools:sample/full_names"
                tools:visibility="visible" />

        </LinearLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/contact_details_phone_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_16dp"
            android:layout_marginTop="@dimen/margin_8dp"
            android:drawableStart="@drawable/ic_baseline_phone_android_24"
            android:drawablePadding="@dimen/margin_8dp"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:visibility="gone"
            tools:text="@tools:sample/us_phones"
            tools:visibility="visible" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/contact_details_phone_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_16dp"
            android:layout_marginTop="@dimen/margin_8dp"
            android:drawableStart="@drawable/ic_baseline_phone_android_24"
            android:drawablePadding="@dimen/margin_8dp"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:visibility="gone"
            tools:text="@tools:sample/us_phones"
            tools:visibility="visible" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/contact_details_email_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_16dp"
            android:layout_marginTop="@dimen/margin_8dp"
            android:drawableStart="@drawable/ic_baseline_email_24"
            android:drawablePadding="@dimen/margin_8dp"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:visibility="gone"
            tools:text="example@example.com"
            tools:visibility="visible" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/contact_details_email_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_16dp"
            android:layout_marginTop="@dimen/margin_8dp"
            android:drawableStart="@drawable/ic_baseline_email_24"
            android:drawablePadding="@dimen/margin_8dp"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:visibility="gone"
            tools:text="example@example.com"
            tools:visibility="visible" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/contact_details_birthday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_16dp"
            android:layout_marginTop="@dimen/margin_8dp"
            android:drawableStart="@drawable/ic_baseline_cake_24"
            android:drawablePadding="@dimen/margin_8dp"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:visibility="gone"
            tools:text="@tools:sample/date/ddmmyy"
            tools:visibility="visible"/>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/contact_details_birthday_reminder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_16dp"
            android:layout_marginTop="@dimen/margin_8dp"
            android:text="@string/remind_about_birthday"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:visibility="gone"
            tools:visibility="visible"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/contact_details_description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/margin_16dp"
            android:layout_marginVertical="@dimen/margin_8dp"
            android:textAppearance="?attr/textAppearanceSubtitle2"
            android:visibility="gone"
            tools:visibility="visible" />

    </LinearLayout>

</ScrollView>
